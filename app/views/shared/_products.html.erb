<ol class="product-listing">
	<% column_count = 0 %>
  <% products.each do |product| %>
  <% column_count += 1
  column_count = 1 if column_count == 7
   %>
    <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
      <li id="product_<%= product.id %>">
				<% if taxon.nil? %>
			  	  <% link_to small_image(product), product %>
						
						
						<%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", product %>
						
			  <% else %>
		     		<% link_to small_image(product), seo_url(taxon, product) %>
						<% link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", seo_url(taxon, product), :class => 'info' %>
						
						<%pathend = product.name.to_url%>
						
						 
						<%pathname = product.name.to_url.gsub(/'/,'|')-%>

						<%=link_to("#{product.name}","/products/"+product.name.to_url,:serialized =>product.name.to_url,:class=>'mainlinks')-%>
						<%link_to("#{product.name}",:controller=>:products, :action=>product.name.to_url)-%>
						
						
						<span class='price selling'><%=product_price(product)-%></span>
						<%=-%>
						
				<% end %>
        
      </li>
    <% end %>
  <% end %>
</ol>
